{
    "configurations": [
        {
            "name": "C/C++: gcc アクティブ ファイルのビルドとデバッグ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            // リダイレクトなどでファイルを与える場合は「<」「path」を分けて配列に
            // 与えないといけない。bashでやる時と違って馬鹿なので「"< sss.txt"」というファイルを引数として
            // 与えようとする
            // frepenを使って、デバッグ時だけxxx.txtファイルをstdioから読み込んでいます
            // という設定にした方が確実にデバッグできる
            // "args": ["<", "/home/nakai288/Desktop/sudoku.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "逆アセンブリ フレーバーを Intel に設定",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C: gcc アクティブなファイルのビルド",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "version": "2.0.0"
}