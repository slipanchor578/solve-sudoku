{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: gcc アクティブなファイルのビルド",
            "command": "/usr/bin/gcc",
            "args": [
                "-std=c23",
                "-Wall",
                "-Wextra",
                "-march=native",
                "-pedantic-errors",
                "-fdiagnostics-color=always",
                "-g",
                "-DDEBUG",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "コンパイラ: /usr/bin/gcc"
        }
    ]
}